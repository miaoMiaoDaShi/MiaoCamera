<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#222222"
    tools:context="com.yalantis.ucrop.ShowPhotoActivity">

    <ImageView
        android:id="@+id/iv_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:background="#00000000"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_cancel"
            android:src="@drawable/pubilic_close_three"
            android:layout_width="34dp"
            android:layout_height="34dp" />

        <ImageView
            android:background="@drawable/public_backgroud"
            android:layout_centerInParent="true"
            android:id="@+id/iv_choice"
            android:src="@drawable/public_crop_choice"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_roat"
            android:layout_centerVertical="true"
            android:src="@drawable/public_reset"
            android:layout_width="34dp"
            android:layout_height="34dp" />

    </RelativeLayout>

</FrameLayout>